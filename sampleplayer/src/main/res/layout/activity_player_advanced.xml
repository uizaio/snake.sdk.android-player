<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.uiza.sdk.view.UZVideoView
        android:id="@+id/uzVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlayVOD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VOD" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlayLive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etLinkPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter link play here" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlayLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSeekTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seek to 16s" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSeekToLiveEdge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seek To Live Edge" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btToggleStatsForNerds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle StatsForNerds" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
