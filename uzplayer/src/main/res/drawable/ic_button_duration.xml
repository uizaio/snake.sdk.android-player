<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/light_grey" />

            <stroke android:width="@dimen/w_1" android:color="@color/light_grey" />

            <corners android:radius="2dp" />

            <padding android:bottom="0dp" android:left="@dimen/padding_2" android:right="@dimen/padding_2" android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_grey" android:startColor="@color/light_grey" />

            <stroke android:width="@dimen/w_1" android:color="@color/light_grey" />

            <corners android:radius="2dp" />

            <padding android:bottom="0dp" android:left="@dimen/padding_2" android:right="@dimen/padding_2" android:top="0dp" />
        </shape>
    </item>

</selector>