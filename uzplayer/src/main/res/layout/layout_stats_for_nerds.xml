<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_small"
            tools:background="@color/black_65">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVideoFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Video format: video/avc 1280x720@30" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAudioFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Audio Format: audio/mp4a-latm 48000Hz" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConnectionSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Connection Speed: 44420 Kbps" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBufferHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Buffer Health: 48.48 s" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNetworkActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Network Activity: 0 KB" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Volume: 50%" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewPortFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Viewport / Frames: 806x453*2.00 / 0 dropped of 184" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Current / Optimal Res:806x453 / 1280x720" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="SDK / Player / API Version" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDeviceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Device Info: Nexus 5 / Android 8.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLiveStreamLatency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_tiny"
                tools:text="Live stream latency: 1000" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/w_25"
        android:layout_height="@dimen/w_25"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_small"
        android:background="@drawable/pdlg_icon_close"
        android:contentDescription="@null" />
</FrameLayout>
