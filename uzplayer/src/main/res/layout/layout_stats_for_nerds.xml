<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/black_65">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvVideoFormat"
            android:gravity="end"
            android:text="@string/video_format"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Video Format" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVideoFormat"
            android:layout_toStartOf="@id/tvAudioFormat"
            android:gravity="end"
            android:text="@string/audio_format"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Audio Format" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAudioFormat"
            android:layout_toStartOf="@id/tvConnectionSpeed"
            android:gravity="end"
            android:text="@string/stat_connection_speed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Connection Speed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvConnectionSpeed"
            android:layout_toStartOf="@id/tvBufferHealth"
            android:gravity="end"
            android:text="@string/stat_buffer_health"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Buffer Health" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBufferHealth"
            android:layout_toStartOf="@id/tvNetworkActivity"
            android:gravity="end"
            android:text="@string/stat_network_activity"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Network Activity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNetworkActivity"
            android:layout_toStartOf="@id/tvVolume"
            android:gravity="end"
            android:text="@string/stat_volume"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Volume" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVolume"
            android:layout_toStartOf="@id/tvViewPortFrame"
            android:gravity="end"
            android:text="@string/stat_viewport_frames"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Viewport / Frames" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvViewPortFrame"
            android:layout_toStartOf="@id/tvResolution"
            android:gravity="end"
            android:text="@string/stat_current_optimal_res"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Current / Optimal Res" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvResolution"
            android:layout_toStartOf="@id/tvEntityId"
            android:gravity="end"
            android:text="@string/stat_entity_id"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Video Entity ID" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEntityId"
            android:layout_toStartOf="@id/tvHost"
            android:gravity="end"
            android:text="@string/stat_host"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Host" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHost"
            android:layout_toStartOf="@id/tvVersion"
            android:gravity="end"
            android:text="@string/stat_sdk_player_api_version"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="SDK / Player / API Version" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVersion"
            android:layout_toStartOf="@id/tvDeviceInfo"
            android:gravity="end"
            android:text="@string/stat_os_device_info"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Device Info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textLiveStreamLatencyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDeviceInfo"
            android:layout_toStartOf="@id/tvLiveStreamLatency"
            android:gravity="end"
            android:text="@string/stat_live_stream_latency"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Live stream latency" />

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:background="@android:color/transparent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVideoFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="video/avc 1280x720@30" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAudioFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVideoFormat"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="audio/mp4a-latm 48000Hz" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvConnectionSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAudioFormat"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="44420 Kbps" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBufferHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvConnectionSpeed"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="48.48 s" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNetworkActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBufferHealth"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="0 KB" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNetworkActivity"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="50%" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvViewPortFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVolume"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="806x453*2.00 / 0 dropped of 184" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvViewPortFrame"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="806x453 / 1280x720" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEntityId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvResolution"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="c62a5409-0e8a-4b11-8e0d-c58c43d81b60" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEntityId"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="https://com.uiza.io" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHost"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:text="@string/default_stats_3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="--- / --- / --" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVersion"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:maxLines="2"
            android:text="@string/default_stats_2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="Nexus 5 / Android 8.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLiveStreamLatency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDeviceInfo"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@id/btnClose"
            android:layout_toEndOf="@id/view_center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_small"
            tools:text="1000" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/w_25"
            android:layout_height="@dimen/w_25"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:layout_marginEnd="@dimen/padding_10"
            android:background="@drawable/pdlg_icon_close"
            android:contentDescription="@null" />
    </RelativeLayout>
</ScrollView>
