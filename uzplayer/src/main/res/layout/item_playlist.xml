<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardBackgroundColor="@color/fbutton_color_wet_asphalt"
    app:cardCornerRadius="@dimen/w_8"
    app:cardElevation="@dimen/w_3">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="113dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_cover"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/ic_button_duration"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/duration"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:paddingBottom="@dimen/padding_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_10"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/year"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_8"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/w_1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_5"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_duration_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:singleLine="true"
                    android:text="@string/duration_2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_8"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/w_1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_5"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:background="@drawable/ic_button_rate"
                    android:singleLine="true"
                    android:text="@string/rate"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_8"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/description"
                android:textColor="@color/grey_desc"
                android:textSize="@dimen/txt_8" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

